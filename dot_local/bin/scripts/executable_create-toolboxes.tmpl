#!/usr/bin/env bash
# Create my custom toolbox distrobox containers
# Only runs on local systems (Bluefin, Fedora)

{{- if .remote }}
echo "Error: This script cannot run on remote systems"
exit 1
{{- else }}

set -euo pipefail

DISTROBOX_CONFIG_DIR="${XDG_CONFIG_HOME:-$HOME/.config}/distrobox"

# Create containers using distrobox-assemble
distrobox-assemble create --file "$DISTROBOX_CONFIG_DIR/browser-toolbox.ini" --replace
distrobox-assemble create --file "$DISTROBOX_CONFIG_DIR/data-toolbox.ini" --replace
distrobox-assemble create --file "$DISTROBOX_CONFIG_DIR/notetaking-toolbox.ini" --replace

echo "âœ“ Toolbox containers created successfully"
distrobox list | grep -E "daily-driver-(arch|fedora)" || true

{{- end }}

