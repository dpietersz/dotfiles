#!/usr/bin/env bash
# Create daily-driver distrobox containers
# Only runs on local systems (Bluefin, Fedora)

{{- if .remote }}
echo "Error: This script cannot run on remote systems"
exit 1
{{- else }}

set -euo pipefail

DISTROBOX_CONFIG_DIR="${XDG_CONFIG_HOME:-$HOME/.config}/distrobox"

# Create containers using distrobox-assemble
distrobox-assemble create --file "$DISTROBOX_CONFIG_DIR/daily-driver-arch.ini" --replace
distrobox-assemble create --file "$DISTROBOX_CONFIG_DIR/daily-driver-fedora.ini" --replace

echo "âœ“ Daily-driver containers created successfully"
distrobox list | grep -E "daily-driver-(arch|fedora)" || true

{{- end }}

