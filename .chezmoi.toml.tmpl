{{- $remote := or (env "CODESPACES" | not | not) (env "SSH_CONNECTION" | not | not) (env "KUBERNETES_SERVICE_HOST" | not | not) -}}
{{- $containerName := output "hostname" | trim -}}

sourceDir = {{ .chezmoi.sourceDir | quote }}

[data]
  remote = {{ $remote }}

{{- if not $remote }}
[git]
  autoCommit = true
  autoPush = true
{{- end }}
