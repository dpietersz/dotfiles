[user]
	name = Dimitri Pietersz
	email = pietersz@gmail.com

[init]
	defaultBranch = main

[pull]
  ff = only
	rebase = false

[push]
	autoSetupRemote = true

[branch]
	autoSetupMerge = true

[rerere]
    enabled=true

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

[credential]
	helper = cache --timeout=3600

[alias]
    change-commits = "!f() { VAR=$1; OLD=$2; NEW=$3; shift 3; git filter-branch --env-filter \"if [[ \\\"$`echo $VAR`\\\" = '$OLD' ]]; then export $VAR='$NEW'; fi\" $@; }; f"
    pull-verbose = !git fetch && git log HEAD..origin/$(git rev-parse --abbrev-ref HEAD) --oneline && echo && git merge --ff-only
    ai = !git add . && git-llm
    hvs = !git add . && git-llm-hvs
    a = commit --amend
    cm = commit -m
    co = checkout
    cob = checkout -b
    discard = reset HEAD --hard

[safe]
	directory = /app
