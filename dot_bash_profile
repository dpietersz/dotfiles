#!/bin/bash
# .bash_profile - Loaded by login shells on macOS
#
# On macOS, terminal emulators start bash as a login shell, which reads
# .bash_profile instead of .bashrc. This file simply sources .bashrc to
# ensure consistent configuration across login and non-login shells.

# Source .bashrc if it exists
if [[ -f ~/.bashrc ]]; then
    source ~/.bashrc
fi
