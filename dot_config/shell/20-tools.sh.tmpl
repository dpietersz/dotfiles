# zoxide - smarter cd command
# Initialize zoxide but remove completion section (uses process substitution incompatible with macOS)
if command -v zoxide >/dev/null; then
  eval "$(zoxide init $CURRENT_SHELL | sed '/^# Load completions/,$d')"
fi

# bat - better cat with syntax highlighting
if command -v bat >/dev/null; then
  if [ "$CURRENT_SHELL" = "bash" ]; then
    eval "$(bat --completion bash)"
  fi
  # zsh: bat completion is typically installed via package manager
fi

