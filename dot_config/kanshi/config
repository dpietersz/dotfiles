# ============================================================================
# PROFILE: Laptop Only
# Description: Only laptop screen, no external monitors
# ============================================================================
profile laptop-only {
  output "BOE 0x06DD Unknown" {
    mode 1920x1080@60
    position 0,0
    scale 1
  }
}
