# SwayOSD Configuration (TOML Format)
# 
# This is an EXAMPLE configuration file for SwayOSD.
# 
# NOTE: As of SwayOSD v0.2.x, the primary configuration is done via:
# 1. CSS styling (style.css)
# 2. Command-line arguments to swayosd-client
# 3. Keybindings in the window manager config (niri/config.kdl, sway/config)
#
# This file is provided for future reference or if SwayOSD adds TOML config support.
# Currently, SwayOSD does NOT use a config.toml file by default.
#
# If you want to use this configuration, you would need to:
# 1. Ensure your SwayOSD version supports TOML configuration
# 2. Place this file at ~/.config/swayosd/config.toml
# 3. Restart swayosd-server

# ============================================================================
# Display Settings
# ============================================================================

[display]
# OSD display timeout in milliseconds (2000ms = 2 seconds)
timeout = 2000

# Position of the OSD on screen
# Options: "top-left", "top-center", "top-right", 
#          "center-left", "center", "center-right",
#          "bottom-left", "bottom-center", "bottom-right"
position = "top-center"

# Monitor to display OSD on (if multiple monitors)
# Leave empty to show on all monitors or primary monitor
monitor = ""

# Enable/disable OSD display
enabled = true

# ============================================================================
# Volume Settings
# ============================================================================

[volume]
# Enable volume OSD
enabled = true

# Maximum volume percentage (100 = 100%, 150 = 150%, etc.)
max_volume = 100

# Volume increment/decrement step (in percentage points)
step = 5

# Show percentage text on OSD
show_percentage = true

# Audio device to control (leave empty for default)
# List devices with: pactl list short sinks
device = ""

# ============================================================================
# Input Volume (Microphone) Settings
# ============================================================================

[input_volume]
# Enable input volume (microphone) OSD
enabled = true

# Maximum input volume percentage
max_volume = 100

# Input volume increment/decrement step
step = 5

# Show percentage text on OSD
show_percentage = true

# Audio input device to control (leave empty for default)
# List devices with: pactl list short sources
device = ""

# ============================================================================
# Brightness Settings
# ============================================================================

[brightness]
# Enable brightness OSD
enabled = true

# Brightness increment/decrement step (in percentage points)
step = 5

# Show percentage text on OSD
show_percentage = true

# Brightness control method
# Options: "backlight", "ddcutil", "auto"
method = "backlight"

# ============================================================================
# Appearance Settings
# ============================================================================

[appearance]
# Theme to use (if SwayOSD supports multiple themes)
# Options: "light", "dark", "auto"
theme = "dark"

# Font family for OSD text
font_family = "Cantarell"

# Font size in points
font_size = 14

# Font weight
# Options: "normal", "bold", "light"
font_weight = "bold"

# Border radius in pixels
border_radius = 12

# Border width in pixels
border_width = 2

# Opacity (0.0 = transparent, 1.0 = opaque)
opacity = 0.92

# ============================================================================
# Color Settings
# ============================================================================

[colors]
# Background color (RGBA hex format)
background = "#282828ea"  # Gruvbox dark with 92% opacity

# Text/foreground color
foreground = "#ebdbb2"    # Gruvbox light

# Border color
border = "#88c0d0"        # Nord Frost 2 (Blue)

# Progress bar colors
progress_background = "#88c0d0"  # Nord Frost 2 (Blue)
progress_fill = "#88c0d0"        # Nord Frost 2 (Blue)

# Mute indicator color
mute_color = "#bf616a"    # Nord Aurora Red

# ============================================================================
# Behavior Settings
# ============================================================================

[behavior]
# Show OSD when locked (for volume/brightness controls)
show_when_locked = true

# Auto-hide OSD after timeout
auto_hide = true

# Fade out animation
fade_out = true

# Fade out duration in milliseconds
fade_out_duration = 300

# ============================================================================
# Logging
# ============================================================================

[logging]
# Log level
# Options: "debug", "info", "warn", "error"
level = "info"

# Enable logging to file
file_logging = false

# Log file path (if file_logging is true)
log_file = "~/.config/swayosd/swayosd.log"

# ============================================================================
# Notes
# ============================================================================

# This configuration file is OPTIONAL and currently NOT USED by SwayOSD.
# 
# Current SwayOSD Configuration Methods:
# 1. CSS Styling: ~/.config/swayosd/style.css (RECOMMENDED)
# 2. Command-line Arguments: swayosd-client --output-volume raise
# 3. Window Manager Keybindings: niri/config.kdl or sway/config
#
# Example keybinding in niri/config.kdl:
#   XF86AudioRaiseVolume allow-when-locked=true { 
#     spawn "swayosd-client" "--output-volume" "raise"; 
#   }
#
# For more information, see:
# - SwayOSD GitHub: https://github.com/ErikReider/SwayOSD
# - SwayOSD README: https://github.com/ErikReider/SwayOSD#readme
