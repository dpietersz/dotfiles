#!/bin/bash
{{- if not .remote }}

# Check if already installed
if command -v storage-explorer >/dev/null; then
  echo "Azure Storage Explorer already installed"
  exit 0
fi

{{- if eq .chezmoi.os "darwin" }}
if command -v brew >/dev/null; then
  brew install --cask microsoft-azure-storage-explorer
else
  echo "Homebrew not installed. Visit: https://azure.microsoft.com/features/storage-explorer/"
fi

{{- else if or (eq .chezmoi.osRelease.id "bluefin") (eq .chezmoi.osRelease.id "fedora") (eq .chezmoi.osRelease.idLike "fedora") }}
if command -v flatpak >/dev/null; then
  flatpak install -y flathub com.microsoft.AzureStorageExplorer
else
  echo "Flatpak not installed."
fi

{{- else }}
echo "No installation instructions for this distribution."
echo "Visit: https://azure.microsoft.com/features/storage-explorer/"

{{- end }}
{{- end }}
