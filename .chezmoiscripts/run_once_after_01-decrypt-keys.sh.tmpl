#!/usr/bin/env bash
set -euo pipefail

{{ if not .remote -}}

echo "ðŸ” Dotfiles encryption setup"
echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"

# Check if keys already exist (already bootstrapped)
if [ -f "$HOME/.ssh/id_ed25519" ] && gpg --list-secret-keys {{ .gpgKeyId }} &>/dev/null; then
    echo "âœ… Keys already installed. Skipping decryption."
    exit 0
fi

# Find mise (same pattern as your packages script)
MISE_BIN_PATH="{{ if $m := lookPath "mise" }}{{ $m }}{{ else if $l := lookPath (joinPath .chezmoi.homeDir ".local/bin/mise") }}{{ $l }}{{ else }}mise{{ end }}"

# Prompt for passphrase
echo ""
echo "Enter your dotfiles passphrase to decrypt your keys:"
read -s DOTFILES_PASSPHRASE
echo ""

# Decrypt SSH keys
echo "ðŸ”“ Decrypting SSH keys..."
mkdir -p "$HOME/.ssh"

echo "$DOTFILES_PASSPHRASE" | $MISE_BIN_PATH exec age -- age -d "{{ .chezmoi.sourceDir }}/.encrypted/ssh_id_ed25519.age" > "$HOME/.ssh/id_ed25519"
echo "$DOTFILES_PASSPHRASE" | $MISE_BIN_PATH exec age -- age -d "{{ .chezmoi.sourceDir }}/.encrypted/ssh_id_ed25519.pub.age" > "$HOME/.ssh/id_ed25519.pub"

chmod 600 "$HOME/.ssh/id_ed25519"
chmod 644 "$HOME/.ssh/id_ed25519.pub"

echo "âœ… SSH keys installed"

# Decrypt and import GPG key
echo "ðŸ”“ Decrypting GPG key..."
GPG_KEY=$(echo "$DOTFILES_PASSPHRASE" | $MISE_BIN_PATH exec age -- age -d "{{ .chezmoi.sourceDir }}/.encrypted/gpg-private.asc.age")

echo "$GPG_KEY" | gpg --import --batch

# Trust the key
echo "{{ .gpgKeyId }}:6:" | gpg --import-ownertrust

echo "âœ… GPG key imported and trusted"

# Configure GPG agent cache (12 hours = 43200 seconds)
echo "âš™ï¸  Configuring GPG agent cache..."
mkdir -p "$HOME/.gnupg"
cat > "$HOME/.gnupg/gpg-agent.conf" <<EOF
# Cache passphrases for 12 hours
default-cache-ttl 43200
max-cache-ttl 43200
EOF

# Reload gpg-agent to apply new settings
gpg-connect-agent reloadagent /bye &>/dev/null || true

echo "âœ… GPG agent cache set to 12 hours"

# Decrypt Cosign keys
echo "ðŸ”“ Decrypting Cosign keys..."
mkdir -p "$HOME/.ssh"

# Private Cosign key
echo "$DOTFILES_PASSPHRASE" | $MISE_BIN_PATH exec age -- age -d "{{ .chezmoi.sourceDir }}/.encrypted/cosign.key.age" > "$HOME/.ssh/cosign.key"

# Public Cosign key
echo "$DOTFILES_PASSPHRASE" | $MISE_BIN_PATH exec age -- age -d "{{ .chezmoi.sourceDir }}/.encrypted/cosign.pub.age" > "$HOME/.ssh/cosign.pub"

# Set proper permissions
chmod 600 "$HOME/.ssh/cosign.key"
chmod 644 "$HOME/.ssh/cosign.pub"

echo "âœ… Cosign keys installed"

# Decrypt Azure HVS keys
echo "ðŸ”“ Decrypting Azure HVS Keys..."
mkdir -p "$HOME/.ssh"

echo "$DOTFILES_PASSPHRASE" | $MISE_BIN_PATH exec age -- age -d "{{ .chezmoi.sourceDir }}/.encrypted/[REDACTED_AZURE_KEY].age" > "$HOME/.ssh/[REDACTED_AZURE_KEY]"

# If public key exists
echo "$DOTFILES_PASSPHRASE" | $MISE_BIN_PATH exec age -- age -d "{{ .chezmoi.sourceDir }}/.encrypted/[REDACTED_AZURE_KEY].pub.age" > "$HOME/.ssh/[REDACTED_AZURE_KEY].pub"

# Set proper permissions
chmod 600 "$HOME/.ssh/[REDACTED_AZURE_KEY]"
chmod 644 "$HOME/.ssh/[REDACTED_AZURE_KEY].pub"  # if applicable

echo "âœ… Azure HVS keys installed"

# Clear passphrase from memory
unset DOTFILES_PASSPHRASE
unset GPG_KEY

echo ""
echo "âœ… All keys decrypted and installed successfully!"
echo ""

echo "Adding SSH key to agent..."
ssh-add ~/.ssh/id_ed25519
echo "SSH key added to agent"

{{ end -}}
