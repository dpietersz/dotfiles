#!/bin/bash
{{- if not .remote }}

# Check if already installed
if command -v zed >/dev/null; then
  echo "Zed already installed"
  exit 0
fi

{{- if eq .chezmoi.os "darwin" }}
if command -v brew >/dev/null; then
  brew install --cask zed
else
  echo "Homebrew not installed. Visit: https://zed.dev/download"
fi

{{- else if eq .chezmoi.osRelease.id "bluefin" }}
# Bluefin - use official install script
curl -f https://zed.dev/install.sh | sh

{{- else if or (eq .chezmoi.osRelease.id "fedora") (eq .chezmoi.osRelease.idLike "fedora") }}
# Fedora - use official install script
curl -f https://zed.dev/install.sh | sh

{{- else }}
echo "No installation instructions for this distribution."
echo "Visit: https://zed.dev/download"

{{- end }}
{{- end }}
