#!/bin/bash
{{- if and (not .remote) (eq .chezmoi.osRelease.id "bluefin") }}

# Only run if syncthing is installed but service not enabled
if command -v syncthing >/dev/null; then
  if ! systemctl --user is-enabled syncthing.service &>/dev/null; then
    systemctl --user enable --now syncthing.service
    echo "Syncthing service enabled and started"
  fi
fi

{{- end }}
